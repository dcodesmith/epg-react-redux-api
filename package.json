{
  "name": "epg-react-redux-ui",
  "version": "0.1.0",
  "private": true,
  "homepage": "http://dcodesmith.github.io/epg-react-redux-ui",
  "dependencies": {
    "bootstrap": "v4.0.0-beta.3",
    "classnames": "^2.2.5",
    "md5": "^2.2.1",
    "moment": "^2.20.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-modal": "^3.1.10",
    "react-redux": "^5.0.6",
    "react-scripts": "1.0.17",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0"
  },
  "scripts": {
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts build",
    "build": "npm-run-all build-css build-js",
    "test": "react-scripts test --env=jsdom --verbose",
    "test:coverage": "react-scripts test --env=jsdom --coverage",
    "coveralls": "ls -l ./coverage && cat ./coverage/lcov.info | coveralls",
    "predeploy": "npm run build",
    "deploy": "npm run cleanup && gh-pages -d build",
    "cleanup": "rm -rf node_modules/gh-pages/.cache",
    "eject": "react-scripts eject"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/src/**.{js,jsx}",
      "!**/src/*.js",
      "!**/src/store/**",
      "!**/src/containers/**"
    ]
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "gh-pages": "^1.1.0",
    "nock": "^9.1.5",
    "node-sass-chokidar": "^0.0.3",
    "npm-run-all": "^4.1.2",
    "redux-devtools-extension": "^2.13.2",
    "redux-immutable-state-invariant": "^2.1.0",
    "redux-logger": "^3.0.6",
    "redux-mock-store": "^1.4.0",
    "reselect": "^3.0.1",
    "sinon": "^4.1.3",
    "sinon-chai": "^2.14.0"
  }
}
